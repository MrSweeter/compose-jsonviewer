            android:name="be.msdc.textformat_viewer.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TextFormatViewer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>